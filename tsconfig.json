{
  "compilerOptions": {
    "jsx": "preserve",

    "module": "node16",
    "moduleResolution": "node16",

    "noEmit": true,
    "allowImportingTsExtensions": true,

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/"]
}
